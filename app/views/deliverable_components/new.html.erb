
<div class="span9 content">
  <%= create_guide("Deliverable Component",
        "Create new component or delete the previous component" + "<br />" +
        "Office: <b>#{current_office.name}</b>"  ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Well done!</strong> <%= flash[:notice].html_safe %>
    </div>
  <% end %>
  
  <% if flash[:error] %>
    <div class="alert alert-error">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Create Failure!</strong> Please fill in all fields.
    </div>
  <% end %>
  
  
  <div class="row-fluid">
    <div class="span12">
      
      
      <!-- <button href="#" class="btn"></button> -->
      
      <%= link_to "Add New Deliverable", '#', :class => " btn btn-primary default-hidden-toggler"  %>
      <%= simple_form_for([@deliverable, @new_deliverable_component], :html => {:class => "form-horizontal prevent_double_submit form-toggler  #{add_default_hidden(params)}" }) do |f| %>
        
        
        <%#= f.input :machine_id, :hint => "Select Machine", :label => "Machine" do %>
           <%#= f.select :machine_id, 
               current_office.all_machines %>
         <%# end %>
         
         
        <%= f.input :name , :input_html => {:class => "input-xlarge span5"}, 
         :label => "Deliverable Name", :hint => "Canvas? Album?" %>
          


        <div class="form-actions">
          <%= f.button :submit , :class => "btn btn-primary", :value=> "Create Component" %>
        </div>
      <% end %>
      
      
     
      
    </div> 
      
      
      
    
  </div><!--/row-->
   <hr />
  <div class="row-fluid">
    <div id="data_list">
      <h2>Total Deliverable Component for   <%= @deliverable.name %>: <%= @deliverable_components.count  %> </h2>
      
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Deliverable Name</th> 
          </tr>
        </thead>
        <tbody>
          <% @deliverable_components.each do |deliverable| %>
            <tr>
              <td><%= deliverable.name  %></td> 
              
              
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















