
<div class="span9 content">
  <%= create_guide("Deliverable Component", 
        "Select deliverable  to <b>manage component</b>" + "<br />" + 
        "Office: <b>#{current_office.name}</b>"   ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Well done!</strong> <%= flash[:notice].html_safe %>
    </div>
  <% end %>
  
  <% if flash[:error] %>
    <div class="alert alert-error">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Create Failure!</strong> Please fill in all fields.
    </div>
  <% end %>
  
  
 
  <div class="row-fluid">
    <div id="data_list">
      
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Deliverable Name</th>
            <th>Description</th>
            <th>Component</th> 
          </tr>
        </thead>
        <tbody>
          <% @deliverables.each do |deliverable| %>
            <tr>
              <td><%= link_to deliverable.name , new_deliverable_deliverable_component_url(deliverable) %></td>
              <td><%= deliverable.description  %></td>
              <td><%= deliverable.deliverable_components.count   %></td>
             
              
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->


 










